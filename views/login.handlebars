<div class="login-container center-align ">

    <div class="card-panel hoverable center-align">
        <div class="card-content">
            <span class="card-title">Account Login</span>
        </div>
        <div class="row">
            <form action="/users/login" method="POST" class="col s12" id="login-form">
                <div class="row">
                    <div class="input-field col s12">
                        <input id="login-username" type="text" class="form-control" name="email">
                        <label for="email">Username</label>
                    </div>
                </div>
                <div class="row">
                    <div class="input-field col s12">
                        <input id="login-password" type="password" class="validate" name="password">
                        <label for="password">Password</label>
                    </div>
                </div>

                <div class="row">
                    <div class="input-field col s12">
                        <button class="btn waves-effect waves-light" type="submit" name="action">Login
                            <i class="material-icons right">send</i>
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>