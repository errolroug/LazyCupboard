
    <table class="highlight responsive-table" id="ingredient-list">

        <thead>
            <tr>
                <th></th>
                <th>Ingredient</th>
                <th>Calories</th>
                <th>Protein</th>
                <th>Fat</th>
                <th>Carbs</th>
                <th>Remove</th>
            </tr>
        </thead>

        <tbody>
            {{#each dbIngredient}}        
                <tr data-id="{{this.dataValues.id}}">
                    <td>                        <p>
                            <label>
                                <input type="checkbox" {{checked}}/><span></span>
                            </label>
                        </p>
                    </td>
                    <td><a href="ingredient/{{this.dataValues.id}}">{{this.name}}</a></td>
                    <td>{{this.calories}}</td>
                    <td>{{this.protein}}</td>
                    <td>{{this.fat}}</td>
                    <td>{{this.carbs}}</td>
                    <td><button id={{id}} class="btn-floating btn-small scale-transition remove-ingredient">
                        <i class="material-icons">remove</i>
                        </button>
                    </td>
                </tr>
            {{/each}}                
        </tbody>

    </table>
